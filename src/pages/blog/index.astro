---
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Body from '../../components/Body.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';
import MainCenter from '../../components/MainCenter.astro';
import Html from '../../layouts/Html.astro';
import { Image } from 'astro:assets';

const posts = (await getCollection('blog')).sort(
	(a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf(),
);
---

<!doctype html>
<Html>
	<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	<Body>
		<Header />
		<MainCenter>
			<section>
				<div transition:name="page-header">
					<h1 class="text-3xl font-bold">👨🏻 There's not much here yet...</h1>

					<div class="space-y-2 text-xl">
						<p class="text-gray-600 dark:text-gray-400">
							Hoping to fix that soon!
						</p>
					</div>
				</div>
				<ul class="grid gap-16 pt-16">
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.slug}/`}>
									<div
										transition:name={`blog-post-card-${post.data.title}`}
										class="space-y-4"
									>
										<h2 class="text-xl font-bold">{post.data.title}</h2>
										<FormattedDate
											transition:name="blog-post-date"
											date={post.data.pubDate}
										/>

										<p class="text-gray-500 dark:text-gray-400">
											{post.data.description}
										</p>
										{post.data.heroImage && (
											<Image
												src={post.data.heroImage}
												alt={post.data.heroAlt ?? null}
												class="mb-4"
											/>
										)}
									</div>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</MainCenter>
		<Footer />
	</Body>
</Html>
