---
import { Image } from "astro:assets";
import BaseHead from "../../components/BaseHead.astro";
import Body from "../../components/Body.astro";
import Footer from "../../components/Footer.astro";
import FormattedDate from "../../components/FormattedDate.astro";
import Header from "../../components/Header.astro";
import MainCenter from "../../components/MainCenter.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../../consts";
import { getPublishedBlogPosts } from "../../content/blog/_getPublishedBlogPosts";
import Html from "../../layouts/Html.astro";
import { groupLinkStyles, linkStyles } from "../../components/Link.astro";

const posts = (await getPublishedBlogPosts()).sort(
	(a, b) => b.data.published.valueOf() - a.data.published.valueOf(),
);
---

<!doctype html>
<Html>
	<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	<Body>
		<Header />
		<MainCenter>
			<section>
				<ul class="grid gap-12">
					{
						posts.map((post) => (
							<li>
								<a class="group" href={`/blog/${post.slug}/`}>
									<div
										transition:name={`blog-post-card-${post.data.title}`}
										class="space-y-3"
									>
										<h2 class={"text-xl font-bold " + groupLinkStyles}>
											{post.data.title}
										</h2>
										<FormattedDate
											transition:name="blog-post-date"
											date={post.data.published}
										/>

										<p class="text-gray-600 dark:text-gray-400">
											{post.data.description}
										</p>
										{post.data.heroImage && (
											<Image
												src={post.data.heroImage}
												alt={post.data.heroAlt ?? null}
												class="mb-4"
											/>
										)}
									</div>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</MainCenter>
		<Footer />
	</Body>
</Html>
