---
import { Image } from 'astro:assets';
import BaseHead from '../components/BaseHead.astro';
import Body from '../components/Body.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import MainCenter from '../components/MainCenter.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { getPublishedBlogPosts } from '../content/blog/_getPublishedBlogPosts';
import Html from '../layouts/Html.astro';

const [firstPost, secondPost] = (await getPublishedBlogPosts()).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<Html>
	<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	<Body>
		<Header title={SITE_TITLE} />
		<MainCenter class="space-y-4 grid place-items-center">
			<div transition:name="page-header">
				<h1 class="text-3xl font-bold">
					👨🏻 Heyo! I'm <span class="text-pink-800 dark:text-pink-300"
						>Kevin Kipp</span
					>.
				</h1>

				<div class="space-y-2 text-xl">
					<p class="text-gray-600 dark:text-gray-400">
						UI Engineer based in Austin, TX.
					</p>
				</div>
			</div>
			{
				firstPost.data.heroImage && (
					<Image
						src={firstPost.data.heroImage}
						alt=""
						class="absolute opacity-0 pointer-events-none"
					/>
				)
			}
			{
				secondPost.data.heroImage && (
					<Image
						src={secondPost.data.heroImage}
						alt=""
						class="absolute opacity-0 pointer-events-none"
					/>
				)
			}
		</MainCenter>
		<Footer />
	</Body>
</Html>
