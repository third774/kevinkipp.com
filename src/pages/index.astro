---
import profile from "../assets/profile.jpg";

import { cn } from "../utils/cn";
import BaseHead from "../components/BaseHead.astro";
import Body from "../components/Body.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import MainCenter from "../components/MainCenter.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import Html from "../layouts/Html.astro";
import { getImage } from "astro:assets";

const { src } = await getImage({
	src: profile,
	widths: [200, 400, 600, 800, 1000, 1200, 1400, 1600],
	formats: ["avif", "webp", "jpeg"],
});
---

<Html>
	<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	<Body>
		<Header title={SITE_TITLE} />
		<MainCenter class="space-y-4 grid place-items-center max-w-5xl">
			<div>
				<div class="flex flex-wrap gap-8 justify-around items-center">
					<img
						class="profile max-w-[12rem]"
						src={src}
						height="200"
						width="200"
						alt="Kevin Kipp in Yosemite with a river with El Capitan in the background. He's smiling and wearing a tan hat."
					/>
					<div class="">
						<h1 class="text-3xl font-blackest">
							Heyo! I'm <span
								class={cn(
									"text-transparent bg-clip-text bg-gradient-to-r",
									"from-teal-600 via-yellow-500 to-pink-600",
									"dark:from-teal-400 dark:via-yellow-400 dark:to-pink-400",
								)}>Kevin Kipp</span
							>.
						</h1>

						<div class="space-y-2 text-lg">
							<p class="text-gray-600">UI Engineer based in Austin, TX.</p>
						</div>
					</div>
				</div>
			</div>
		</MainCenter>
		<Footer />
		<snow-fall></snow-fall>
		<script src="https://unpkg.com/@zachleat/snow-fall@1.0.1/snow-fall.js"
		></script>
	</Body>
</Html>
