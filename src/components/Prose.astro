---
import { twMerge } from "tailwind-merge";

interface Props {
	class?: string;
}

const { class: className } = Astro.props;
---

<div
	class:list={twMerge(
		"prose prose-gray dark:prose-invert",
		"prose-a:underline prose-a:underline-offset-4 hover:prose-a:underline-offset-0 prose-a:transition-all",
		"prose-a:decoration-pink-500 hover:prose-a:text-pink-700 hover:prose-a:decoration-pink-500/0",
		"prose-a:dark:decoration-pink-500 hover:dark:prose-a:text-pink-500",
		"prose-code:before:content-none prose-code:after:content-none",
		"prose-li:m-0",
		"prose-h1:my-16 prose-h1:font-blackest prose-h1:text-3xl",
		"prose-blockquote:py-1 prose-blockquote:bg-gray-200 dark:prose-blockquote:bg-gray-800 prose-blockquote:border-teal-500 dark:prose-blockquote:border-teal-300",
		"prose-h2:leading-tight prose-h3:leading-tight",
		className,
	)}
>
	<slot />
</div>
