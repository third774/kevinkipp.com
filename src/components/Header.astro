---
import { cn } from "../utils/cn";
import ColumnWrapper from "./ColumnWrapper.astro";
import HeaderLink from "./HeaderLink.astro";
import ThemeToggle from "./ThemeToggle.astro";
---

<header>
	<ColumnWrapper>
		<nav class="flex gap-4 justify-between items-center text-xl font-medium">
			<div class="flex-grow basis-0 flex items-center ml-1">
				<a
					class="inline-block px-3 text-teal-700 hover:text-teal-800 dark:text-teal-400 dark:hover:text-teal-300"
					href="/"
				>
					<span
						class={cn(
							"font-blackest",
							"text-transparent bg-clip-text bg-gradient-to-r",
							"from-teal-600 via-yellow-500 to-pink-600",
							"dark:from-teal-400 dark:via-yellow-400 dark:to-pink-400",
						)}>Kevin Kipp</span
					>
				</a>
			</div>

			<div class="px-4">
				<ThemeToggle class="hidden" />
				<HeaderLink href="/blog/feed.xml">RSS</HeaderLink>
			</div>
		</nav>
	</ColumnWrapper>
</header>
