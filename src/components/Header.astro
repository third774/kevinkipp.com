---
import { cn } from "../utils/cn";
import ColumnWrapper from "./ColumnWrapper.astro";
import HeaderLink from "./HeaderLink.astro";
import ThemeToggle from "./ThemeToggle.astro";
---

<header class="py-6">
	<ColumnWrapper style="--gutter:0;">
		<nav class="flex gap-4 justify-between items-center text-xl font-medium">
			<div class="flex-grow basis-0 flex items-center">
				<a
					class="inline-block px-3 text-teal-700 hover:text-teal-800 dark:text-teal-400 dark:hover:text-teal-300"
					href="/"
				>
					<span
						class={cn(
							"font-blackest",
							"text-transparent bg-clip-text bg-gradient-to-r",
							"from-teal-600 via-yellow-500 to-pink-600",
							"dark:from-teal-400 dark:via-yellow-400 dark:to-pink-400",
						)}>Kevin Kipp</span
					>
				</a>
			</div>

			<div class="px-4">
				<ThemeToggle class="hidden" />
				<HeaderLink class="flex items-center" href="/blog/feed.xml">
					<svg
						xmlns="http://www.w3.org/2000/svg"
						width="24"
						height="24"
						viewBox="0 0 24 24"
						fill="none"
						stroke="currentColor"
						stroke-width="2"
						stroke-linecap="round"
						stroke-linejoin="round"
						class="feather feather-rss"
						><path d="M4 11a9 9 0 0 1 9 9"></path><path
							d="M4 4a16 16 0 0 1 16 16"></path><circle cx="5" cy="19" r="1"
						></circle></svg
					>
					<span class="sr-only"> RSS</span>
				</HeaderLink>
			</div>
		</nav>
	</ColumnWrapper>
</header>
