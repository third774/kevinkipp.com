---
import type { Code, Debug } from "astro:components";
import LocalizedTime from "../components/LocalizedTime.astro";
interface Props {
	date: Date;
	weekday?: string;
	year?: string;
	month?: string;
	day?: string;
	hour?: string;
	minute?: string;
	second?: string;
	timeZoneName?: string;
}

const { date, ...rest } = Astro.props;
---

<LocalizedTime {...rest}>
	<time datetime={date.toISOString()}>
		{date.toLocaleDateString("en-us", rest as any)}
	</time>
</LocalizedTime>
