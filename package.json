{
	"name": "blog-test",
	"type": "module",
	"version": "0.0.1",
	"scripts": {
		"dev": "wrangler types && astro dev --open",
		"db:generate": "drizzle-kit generate",
		"db:migrate:local": "wrangler d1 migrations apply kevinkipp.com --local",
		"db:migrate:prod": "wrangler d1 migrations apply kevinkipp.com --remote",
		"db:migrate:preview": "wrangler d1 migrations apply --env preview kevinkipp.com_preview --remote",
		"db:studio:local": "LOCAL_DB_PATH=$(find .wrangler/state/v3/d1/miniflare-D1DatabaseObject -type f -name '*.sqlite' -print -quit) drizzle-kit studio",
		"db:studio:preview": "source .drizzle.env && DB_ID='167258f1-9e95-4b98-80fd-df0f4e81112b' drizzle-kit studio",
		"db:studio:prod": "source .drizzle.env && DB_ID='d5c17b3d-78fb-4894-a743-95b19cac53a9' drizzle-kit studio",
		"start": "wrangler types && astro dev",
		"build": "wrangler types && VITE_COMMIT_HASH=\"$(git rev-parse --short HEAD)\" astro build",
		"newpost": "node ./scripts/newpost.js",
		"preview": "wrangler types && wrangler pages dev ./dist",
		"astro": "astro",
		"prettier": "prettier --write .",
		"upgrade": "npm-run-all upgrade:*",
		"upgrade:astro": "npx @astrojs/upgrade",
		"upgrade:others": "npx npm-upgrade",
		"types": "wrangler types",
		"typecheck": "tsc --noEmit",
		"typecheck:watch": "tsc --noEmit --watch"
	},
	"dependencies": {
		"@astrojs/cloudflare": "^10.2.6",
		"@astrojs/mdx": "^3.0.1",
		"@astrojs/rss": "^4.0.6",
		"@astrojs/sitemap": "^3.1.5",
		"@astrojs/tailwind": "^5.1.0",
		"@daviddarnes/share-button": "^1.1.3",
		"@evilmartians/harmony": "^1.2.0",
		"@types/sanitize-html": "^2.11.0",
		"astro": "^4.9.2",
		"astro-robots-txt": "^1.0.0",
		"clsx": "^2.1.1",
		"drizzle-orm": "^0.31.1",
		"jose": "^5.4.0",
		"marked": "^12.0.2",
		"mdast-util-to-string": "^4.0.0",
		"reading-time": "^1.5.0",
		"sanitize-html": "^2.13.0",
		"tailwind-merge": "^2.3.0",
		"tailwindcss": "^3.4.3",
		"tiny-invariant": "^1.3.3",
		"valibot": "^0.30.0"
	},
	"devDependencies": {
		"@csstools/postcss-oklab-function": "^3.0.16",
		"better-sqlite3": "^11.0.0",
		"cross-env": "^7.0.3",
		"drizzle-kit": "^0.22.2",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.3.0",
		"prettier-plugin-astro": "^0.14.0",
		"prettier-plugin-organize-imports": "^3.2.4"
	}
}
