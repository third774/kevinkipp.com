{
	"name": "blog-test",
	"type": "module",
	"version": "0.0.1",
	"scripts": {
		"dev": "astro dev --open",
		"db:generate": "drizzle-kit generate:sqlite",
		"db:migrate:local": "wrangler d1 migrations apply kevinkipp.com --local",
		"db:migrate:prod": "wrangler d1 migrations apply kevinkipp.com",
		"db:migrate:preview": "wrangler d1 migrations apply --env preview kevinkipp.com_preview",
		"db:studio:local": "cross-env LOCAL_DB_PATH=$(find .wrangler/state/v3/d1/miniflare-D1DatabaseObject -type f -name '*.sqlite' -print -quit) drizzle-kit studio",
		"db:studio:preview": "cross-env DB_NAME='kevinkipp.com_preview' WRANGLER_CONFIG='--environment=preview' drizzle-kit studio",
		"db:studio:prod": "drizzle-kit studio",
		"start": "astro dev",
		"build": "astro build",
		"newpost": "node ./scripts/newpost.js",
		"preview": "wrangler pages dev ./dist",
		"astro": "astro",
		"prettier": "prettier --write .",
		"upgrade": "npx @astrojs/upgrade && npx npm-upgrade",
		"typecheck": "tsc --noEmit",
		"typecheck:watch": "tsc --noEmit --watch"
	},
	"dependencies": {
		"@astrojs/cloudflare": "^9.0.2",
		"@astrojs/mdx": "^2.0.5",
		"@astrojs/rss": "^4.0.2",
		"@astrojs/sitemap": "^3.0.5",
		"@astrojs/tailwind": "^5.1.0",
		"@daviddarnes/share-button": "^1.1.2",
		"@evilmartians/harmony": "^1.2.0",
		"@types/sanitize-html": "^2.9.5",
		"astro": "^4.2.0",
		"astro-robots-txt": "^1.0.0",
		"clsx": "^2.1.0",
		"drizzle-orm": "^0.29.4",
		"marked": "^11.1.1",
		"mdast-util-to-string": "^4.0.0",
		"puppeteer": "^21.7.0",
		"reading-time": "^1.5.0",
		"sanitize-html": "^2.11.0",
		"tailwind-merge": "^2.2.0",
		"tailwindcss": "^3.4.1",
		"tiny-invariant": "^1.3.1",
		"valibot": "^0.29.0"
	},
	"devDependencies": {
		"@csstools/postcss-oklab-function": "^3.0.9",
		"@tailwindcss/typography": "^0.5.10",
		"better-sqlite3": "^9.4.3",
		"cross-env": "^7.0.3",
		"drizzle-kit": "^0.20.14",
		"prettier": "^3.2.4",
		"prettier-plugin-astro": "^0.12.3",
		"prettier-plugin-organize-imports": "^3.2.4"
	}
}
